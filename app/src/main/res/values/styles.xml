<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="PasswordView">
        <attr name="pvBorderColor" format="color"/>
        <attr name="pvBorderWidth" format="dimension"/>
        <attr name="pvBorderRadius" format="dimension"/>
        <attr name="pvPasswordColor" format="color"/>
        <attr name="pvPasswordRadius" format="dimension"/>
        <attr name="pvPasswordLength" format="integer"/>
    </declare-styleable>

</resources>
